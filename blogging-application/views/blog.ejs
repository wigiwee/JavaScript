<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" width="700">
        <pre class="mt-4"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>  " width="40px" >
        <%= blog.createdBy.fullName %>
    </div>
<% if (locals.user) { %>
    <div class="container mt-3">
        <h1>comments(<%= comments.length %>)</h1>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
              <input type="text" class="form-control" id="content" name="content"  placeholder="Enter your comment">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
 
<% } %>
<% comments.forEach(comment => { %>
<div class=" container mt-3">
    <img src="<%= comment.createdBy.profileImageUrl %>  " width="40px" >
    <%= comment.createdBy.fullName %>
    <pre><%= comment.content %></pre>    
</div>
<% }) %>
    <%- include('./partials/scripts') %>
    
</body>
</html>